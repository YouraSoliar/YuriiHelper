<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_view_team_1"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/bg_button3_3"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="@color/bg_button1_1"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        android:text="@string/text_view_team_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTeam1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_button3_3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/textViewTeam2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textViewTeam2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:background="@color/bg_button1_1"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/textViewTeam1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textViewSet"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/text_view_set"
        android:textColor="@color/bg_button5_2"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPointSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewPointSet"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/bg_button5_2"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTeam1" />

    <TextView
        android:id="@+id/textViewReset"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/text_view_reset"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageSubtractPointOne"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/teamOneOperations"
        app:layout_constraintEnd_toStartOf="@+id/imageAddPointOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTeam1"
        app:srcCompat="@drawable/baseline_remove_24" />

    <ImageView
        android:id="@+id/imageAddPointOne"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/teamOneOperations"
        app:layout_constraintEnd_toEndOf="@+id/textViewTeam1"
        app:layout_constraintStart_toEndOf="@+id/imageSubtractPointOne"
        app:layout_constraintTop_toBottomOf="@+id/textViewTeam1"
        app:srcCompat="@drawable/baseline_add_24" />

    <ImageView
        android:id="@+id/imageSubtractPointTwo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/teamTwoOperations"
        app:layout_constraintEnd_toStartOf="@+id/imageAddPointTwo"
        app:layout_constraintStart_toEndOf="@+id/textViewTeam1"
        app:layout_constraintTop_toBottomOf="@+id/textViewTeam2"
        app:srcCompat="@drawable/baseline_remove_24" />

    <ImageView
        android:id="@+id/imageAddPointTwo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/teamTwoOperations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageSubtractPointTwo"
        app:layout_constraintTop_toBottomOf="@+id/textViewTeam2"
        app:srcCompat="@drawable/baseline_add_24" />

    <ImageView
        android:id="@+id/imageViewSubtractSet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/bg_button5_4"
        app:layout_constraintEnd_toStartOf="@+id/imageViewAddSet"
        app:layout_constraintStart_toStartOf="@+id/textViewPointSet"
        app:layout_constraintTop_toBottomOf="@+id/textViewPointSet"
        app:srcCompat="@drawable/baseline_remove_24" />

    <ImageView
        android:id="@+id/imageViewAddSet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/bg_button5_4"
        app:layout_constraintEnd_toEndOf="@+id/textViewSet"
        app:layout_constraintStart_toEndOf="@+id/imageViewSubtractSet"
        app:layout_constraintTop_toBottomOf="@+id/textViewPointSet"
        app:srcCompat="@drawable/baseline_add_24" />
</androidx.constraintlayout.widget.ConstraintLayout>